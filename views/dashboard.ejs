<% include header %>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <ul class="nav nav-pills navbar-left dashboard-editor-nav-pills" role="tablist">
            <li class="active">
                <a role="tab" data-toggle="tab" href="#tab-content-sql">
                    <span class="glyphicon glyphicon-align-left"></span> SQL
                </a>
            </li>
            <li>
                <a role="tab" data-toggle="tab" href="#tab-content-visualize">
                    <span class="glyphicon glyphicon-stats"></span> Vis
                </a>
            </li>
        </ul>
        <form class="navbar-form navbar-left navbar-left-border">
            <button type="button" id="btn-save-dashboard" class="btn btn-default">
                <span class="shortcut-letter">S</span>ave
            </button>
            <div class="form-group" style="margin-left: 20px;">
                <input id="header-dashboard-name" name="header-dashboard-name" class="input-dashboard-name form-control"
                       value="<%= dashboard.name %>" type="text" placeholder="Dashboard Name">
            </div>
            <div class="form-group" style="margin-left: 20px;">
                <label class="control-label" for="tags">Tags</label>
            </div>
            <div class="form-group">
                <input id="tags" name="tags" class="form-control" data-role="tagsinput"
                    value="<%= dashboard.tags || '' %>" type="text" placeholder="">
            </div>
            <input type="hidden" id="cache-key" value="<%= cacheKey %>"/>
            <input type="hidden" id="dashboard-id" name="dashboard-id" value="<%= dashboard._id || 'new' %>"/>
            <span id="btn-save-result" class="label label-info"></span>
        </form>
    </div>
</nav>
<div id="panel-main">
    <div class="tab-content">

        <!-- BEGIN QUERY SQL PANE -->
        <div class="tab-pane active" id="tab-content-sql">
            <form id="add-query-form">
                <select id="query-select" name="query"></select>
                <input type="submit" class="btn btn-default" value="Add"></input>
            </form>
        </div>

        <!-- BEGIN Visualize PANE -->
        <div class="tab-pane" id="tab-content-visualize">
            <div class="sidebar">
            </div>
            <div class="tab-pane-main">
                <div class="panel-editor">
                    <div id="dashboard-editor"><%- dashboard.queryText || "" %></div>
                </div>
            </div>
        </div>
        
    </div>
</div>
<!-- /.panel-tabs -->
<% include footer %>